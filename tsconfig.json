{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": [
      "dom",
    ],
    "strict": true,
    "sourceMap": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@store/*": ["./src/store/*"],
      "@ui/*": ["./src/ui/*"],
      "@locale": ["./src/locale/strings.ts"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
